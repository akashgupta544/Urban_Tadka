    <div id="mobile-login" style="position:relative">
        <div id="form-section" style="margin:10px">
            <form>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>
                <div id="submit-button" style="color:white;box-shadow: 0px 0px 10px #888;border-radius: 10px;margin-bottom:10px;width:100px;height:30px;text-align:center; background-color:#cf3939;font-size:large;padding:2px;font-weight:500">submit</div>
            </form>

            <div id="message">Mismatch Between Username and Password. Please<text>@Html.ActionLink("Try Again", "login")</text></div>
        </div>
        <div id="edit-section">
            <div id="successfull" style="color:green;font-weight:800;margin-bottom:20px;"> Successfully Logged In</div>
            @using (Html.BeginForm())
        {
            for (int i = 0; i < Model.Count; i++)
            {
                int j = (int)@Model.ElementAt(i).Item_category_ID;
                <a id="category-bar" hrefvalue="@(i+1)" class="btn btn-primary" role="button" data-toggle="collapse" aria-expanded="false" aria-controls="collapseExample" style="width:100%;height:45px;font-weight:700;background-color:#990012; box-shadow: 0px 0px 10px #888;border-color:#888">
                    <span>Select Your</span> @Model.ElementAt(i).Category_info.category_name
                </a>

                <div class="collapse" id="@(i+1)">

                    <div id="buffet-menu-item" class="well">
                        @for (int k = i; k < Model.Count; k++)
                        {

                            if (Model.ElementAt(k).Item_category_ID != j && k != 0)
                            { break; }

                            <div id="buffet-item">

                                <img id="buffet-menu-image" class="img-responsive" src="@Url.Content(@Model.ElementAt(k).item_bigphoto)" alt="...">@Html.CheckBoxFor(model => model[k].Is_Buffet)

                                <div class="media-body" style="width:30%;font-size:medium; height:30px;">
                                    <h3 style="margin-top:2px">@Html.DisplayFor(model => model[i].Item_name)</h3>

                                </div>
                            </div>
                                j = (int)Model.ElementAt(k).Item_category_ID;



                            i++;
                        }
                    </div>
                </div>


            }

            for (int l = 0; l < Model.Count; l++)
            {
                @Html.HiddenFor(model => model[l].Item_ID)
                @Html.HiddenFor(model => model[l].Item_name)
            }


            <input type="submit" style="width:20%" value="Save" class="btn btn-primary btn-lg" />
        }



        </div>
    </div>





</body>
</html>
