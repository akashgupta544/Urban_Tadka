@model IList<Urban_BOL.Item_Info>
@using Urban_BOL;


<!DOCTYPE html>

<html>
<head>
    <title>Urban Tadka Menu</title>
    <script src="~/Scripts/jquery-2.0.0.min.js"></script>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/slick.min.js"></script>
    <link href="~/slick.css" rel="stylesheet" />
    <script src="~/Scripts/slick.min.js"></script>
    <link href="~/Scripts/bootstrap.css" rel="stylesheet" />
    <link href="~/Home.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap1.js"></script>
    <script type="text/javascript">
        var f;
        var n;
    $(document).ready(function () {
        $('.top-bar').hover(function () { $(this).css('background-color', '#F75D59') }).mouseout(function () { $(this).css('background-color', 'white') });
        $('p[id="cater-text"]').click(function () {
            $('#back-image').slideUp("slow");




        })
        $('img[id="item-image"]').each(function () {
            if ($(this).attr('class') != "1") {
                $(this).hide();
            }
        })
        $('p[id="item-image"]').each(function () {
            if ($(this).attr('class') != "1") {
                $(this).hide();
            }
        })

        $('li[id="mobile-list"]').each(function () {
            $(this).click(function () {
                $('img[id="item-image"]').each(function () {
                    $(this).hide();
                })
                $('p[id="item-image"]').each(function () {
                    $(this).hide();
                })
                a = ($(this).attr('class'));
                b = ($(this).attr('name'));

                $('p[id="mob-category"]').html(b);
                $('img[class=' + a + ']').each(function () {
                    $(this).show(0, "swing");
                }).fadeOut(0).fadeIn(1500, "swing");
                $('p[class= ' + a + ']').each(function () {
                    $(this).show(0, "swing");
                }).fadeOut(0).fadeIn(1500, "swing");
            })

        })

        $('img[id="item-image"]').each(function () {
            $(this).click(function () {
                var e = ($(this).attr('name'));
                $('p[name="' + e + '"]').each(function () {
                    $(this).slideToggle("slowly");
                })

            })
        })
        $('div[class="standard"]').each(function () {
            $(this).click(function(){
                var r = ($(this).attr('id'));
                $('div[class=' + r + ']').each(function () {
                    $(this).toggle("slow")
                    })

            })
        })
        $('a[id="curry"]').each(function () {
            $(this).click(function () {
                n = $(this).attr('name');
            })



        })
        $('li[id="mobile-list"]').each(function () {
            $(this).click(function () {
                f = ($(this).attr('class'));


                //$('#any').html($('img[class= ' + f + ']'.length));


                $('a[name= "' + n + '"]').hide(0);
            })


        })
        $('img[class="' + f + '"]').css('display', 'normal');
        $('p[class="' + f + '"]').css('display', 'normal');


    })


    </script>

</head>
<body>
    <div style="position:relative">
        <div style="width:100%;background-color:gray;position:fixed;margin-top:0px">
            <a href="#div1">For Div1</a>
            <a href="#div2">For Div1</a>

        </div>
    </div>
    <div>
        <div style="position:relative">
            <div style="width:20%;background-color:gray;position:fixed;margin-top:0px">
                <a href="#div1">For Div1</a><br />
                <a href="#div2">For Div1</a>

            </div>
        </div>

        <div style="width:80%;background-color:green;margin-left:20%;margin-top:40px">
            <div name="div1" style="height: 800px;border:solid">
                <a name="div1"></a>"gray
            </div>
            <div name="div2" style="height: 800px;border:solid">
                <a name="div2"></a>
                grenn
            </div>
        </div>
    </div>

</body>
</html>
